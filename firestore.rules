rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 企業データ
    match /companies/{companyId} {
      allow read, write: if true; // 開発環境では全許可
    }
    
    // ニュース記事
    match /news/{articleId} {
      allow read, write: if true; // 開発環境では全許可
    }
    
    // 設定
    match /settings/{settingId} {
      allow read, write: if true; // 開発環境では全許可
    }
    
    // その他のドキュメント
    match /{document=**} {
      allow read, write: if true; // 開発環境では全許可
    }
  }
}
